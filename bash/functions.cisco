function grtest
{
    if [ $# -eq 0 ]; then
    	NODE_ENV=test grunt test
    else
    	NODE_ENV=test TEST=$1 grunt test
    fi
}

function clientappbuild ()
{
    export CI_BUILD_NUMBER=0-dev
    export GIT_COMMIT_ID=`git rev-parse HEAD`
    pushd ~/proj/cisco/projects/js-search-client/module;
    grunt package;
    popd;
    pushd ~/proj/cisco/projects/js-search-client/client-app;
    grunt build-local;
    popd
}

